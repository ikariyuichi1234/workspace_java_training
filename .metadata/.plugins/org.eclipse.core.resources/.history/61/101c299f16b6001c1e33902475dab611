package exam;

import java.util.Scanner;

public class Exam4 {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		int count = 0;
		
		int x = (int)(Math.random() * 10 + 1);
		count += x;
		
		System.out.println("0以外の数値を入力：" + x);
		
		for(int i = 1; i != 0;) {
			System.out.println("任意の数値を入力");
			x = scan.nextInt();
			count += x;
			i = x;
		}
		
		System.out.println("合計：" + count);
		
		scan.close();

	}

}
