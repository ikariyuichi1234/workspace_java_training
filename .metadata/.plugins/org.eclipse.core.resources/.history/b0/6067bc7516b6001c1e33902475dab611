package exam;

import java.util.Scanner;

public class Exam5 {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		int sum = 0;
		int count = 0;
		
		int x = (int)(Math.random() * 10 + 1);
		sum += x;
		count++;
		
		System.out.println("0以外の数値を入力：" + x);
		
		for(int i = 1; i != 0;) {
			System.out.println("任意の数値を入力");
			x = scan.nextInt();
			sum += x;
			count++;
			i = x;
		}
		
		System.out.println("平均：" + sum / count);
		
		scan.close();

	}

}