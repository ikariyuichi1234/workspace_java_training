package exam;

import java.util.Scanner;

public class Exam10 {
	@SuppressWarnings("resource")
	public static void main(String[] args) {
		
		System.out.println("xに任意の数値を代入します");
		Scanner num01 = new Scanner(System.in);
		int x = num01.nextInt();
		
		System.out.println("xより小さい任意の数値を入力してください");
		Scanner num02 = new Scanner(System.in);
		int y = num02.nextInt();
		
		while(y >= x) {
			System.out.println("xより小さい任意の数値を入力してください");
			Scanner num03 = new Scanner(System.in);
			y = num03.nextInt();
		}
		System.out.println("xを" + y + "で割った商は" +  x / y + "、余りは" + x % y);
	}

}
